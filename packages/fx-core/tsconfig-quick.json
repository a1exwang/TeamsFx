{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "build/tsbuildinfo.json",
    "composite": true,
    "rootDir": "src",
    "preserveSymlinks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "target": "es2017",
    "outDir": "build",
    "lib": ["es6", "dom.iterable", "dom"],
    "allowJs": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "plugins": [{ "transform": "../failpoint-ts/transformer/transformer.ts" }]
  },
  "references": [
    {
      "path": "../api/tsconfig-quick.json"
    }
  ],
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules", "**/tests/*"]
}
